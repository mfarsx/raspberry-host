# Development Environment Configuration
# Safe defaults for local development

# Domain Configuration
DOMAIN=localhost
TLS_EMAIL=dev@localhost

# Application Environment
NODE_ENV=production
PORT=3001
LOG_LEVEL=debug

# Database Configuration
MONGO_URL=mongodb://pi_user:devpassword@mongodb:27017/pi_app?authSource=pi_app
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=devpassword
MONGO_DATABASE=pi_app
MONGO_PASSWORD=devpassword

# Redis Configuration
REDIS_URL=redis://:devpassword@redis:6379
REDIS_PASSWORD=devpassword

# Security
JWT_SECRET=dev-jwt-secret-key-for-development-only-minimum-32-characters
CORS_ORIGIN=http://localhost

# Frontend Configuration
REACT_APP_API_URL=http://localhost/api
REACT_APP_WS_URL=ws://localhost/ws
REACT_APP_ENV=development

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development (set to false for production)
DEV_MODE=false