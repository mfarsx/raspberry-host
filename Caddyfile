{$DOMAIN:localhost} {
    # For localhost development, use HTTP only
    # For production domains, use automatic HTTPS
    @localhost {
        host localhost
    }
    
    # Only enable TLS for non-localhost domains
    tls {$TLS_EMAIL:admin@localhost}
    
    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # WebSocket proxy
    reverse_proxy /ws* api:3001

    # API routes
    reverse_proxy /api* api:3001

    # Serve React app
    reverse_proxy /* web:80

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }
}